@model Payroll.Business.Models.HourlyEmployee

@{
    ViewBag.Title = "Hourly Employee Report";
    Layout = "_Layout";
}

<h2><a href="/"><i class="glyphicon glyphicon-arrow-left"></i></a>@Model.FirstName @Model.LastName</h2>
<div class="row">
    <div class="col-md-6">
        <div class="row">
            SSN: @Model.SSN
        </div>
        <div class="row">
            First Name: @Model.FirstName
        </div>
        <div class="row">
            Last Name: @Model.LastName
        </div>
        <div class="row">
            Employee Type: @Model.Type
        </div>
    </div>
    <div class="col-md-6">
        <div class="row">
            Hourly Pay: @string.Format("{0:C}", Model.Rate)
        </div>
        <div class="row">
            Total Pay to Date: @string.Format("{0:C}", Model.TotalPayToDate)
        </div>
        <div class="row">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Sale</th>
                        <th scope="col">Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var time in Model.TimeEntries)
                    {
                        <tr>
                            <td>@time.Date.ToShortDateString()</td>
                            <td>@string.Format("{0:f2}", time.Hours)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
